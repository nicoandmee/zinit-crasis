function precmd {
  # vcs_info
  # Put the string "hostname::/full/directory/path" in the title bar:
  echo -ne "\e]2;$PWD\a"

  # Put the parentdir/currentdir in the tab
  echo -ne "\e]1;$PWD:h:t/$PWD:t\a"
}

function set_running_app {
  zplugin cdclear

printf "\e]1; $PWD:t:$(history $HISTCMD | cut -b7- ) \a"
}

zplugin ice blockf atclone"Echo cloned"
zplugin cdreplay
autoload compinit
compinit

function preexec {
  set_running_app
}

function postexec {
  set_running_app
}
